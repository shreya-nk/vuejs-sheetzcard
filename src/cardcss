

/* Media query for displaying the button on small tablets (800px) and larger phones (500px) */
@media screen and (max-width: 800px) {
  a.details-button {
    display: inline-block;
  }
}

/* Media query for scaling the card on screens smaller than 500px */
@media screen and (max-width: 500px) {
  .card {
    max-width: 300px;
  }
  h2 {
    font-size: 20px;
  }
  p {
    font-size: 14px;
  }
}